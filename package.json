{
  "name": "tetris-bot",
  "version": "1.0.0",
  "description": "Telegram bot with Tetris-style racing game",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev:bot": "npm run dev --workspace=backend",
    "dev:webapp": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces --if-present",
    "build:bot": "npm run build --workspace=backend",
    "build:webapp": "npm run build --workspace=frontend",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}



