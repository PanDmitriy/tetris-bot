# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Database Configuration (for local development without Docker)
# If using Docker, these are set in docker-compose.yml
DATABASE_URL=postgresql://tetris:tetris_password@localhost:5432/tetris_bot?schema=public

# PostgreSQL Configuration (used by docker-compose.yml)
POSTGRES_USER=tetris
POSTGRES_PASSWORD=tetris_password
POSTGRES_DB=tetris_bot
POSTGRES_PORT=5432

# Application URLs
WEBAPP_URL=http://localhost:5173

# Port Configuration (for docker-compose.yml)
BACKEND_PORT=3000
FRONTEND_PORT=5173

# Node Environment
NODE_ENV=development
